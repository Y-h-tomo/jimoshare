= form_with model: @item, items_path,method: :get, local: true do |f|
  = f.select :keyword, [ ['新着順', 'new'],
                            ['古い順', 'old'],
                            ['価格が安い順', 'price'],
                            ['期限が近い順', 'limit'],
                          ]
  = f.submit "並び替える"